@model TSB100_lab.Models.UserCredentials
@{
    ViewBag.Title = "Logga in";
}
<h1>Logga in</h1>

@using (Html.BeginForm())
{
    <div>
        <div>Namn: </div>
        <div>@Html.TextBoxFor(m => m.Username)</div>
    </div>

    <div>
        <div>Lösenord: </div>
        <div>@Html.PasswordFor(m => m.Password)</div>
    </div>

    <div>
        <input type="submit" value="Logga in" class="btn btn-default" />
    </div>
    <div>
        @Html.ValidationSummary()
    </div>
}